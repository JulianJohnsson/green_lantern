@import "material/scss/material-kit/variables";

.onboarding-page {
  background-image: url(<%= asset_path('bg_3.png') %>);
  background-size:cover;
  background-position: right 0% top 0%;
  font-family: Quicksand;
  padding-top: 120px;
  min-height: 87vh;
}

.onboarding-page .form-group label {
  font-size: 0.7rem;
}

@media screen and (max-width: 768px) {
  .onboarding-page {
    .stepbar-container {
      width: 100%;
      left: 0;
    }
  }
}

.mini-navigation {
  position: absolute;
}

.mini-navigation .navbar-brand {
  font-size: 2em;
  font-family: Maven Pro;
  font-weight: 900;
}

.onboarding-page h3 {
  text-transform: none;
  color: $brand-primary;
}

.onboarding-page h3 small {
  text-transform: none;
  font-family: Quicksand;
  color: $brand-grey;
  font-weight: bold;
  font-size: 65%;
}

.security-details {
  background: $brand-dark-blue;
  color: white;
  height: 412px;
  padding-top: 30px !important;
  padding-bottom: 40px !important;
  border-top-right-radius: 12px;
  border-bottom-right-radius: 12px;
  h5 {
    border: white 1px solid;
    border-radius: 20px;
    padding: 5px 2px;
    margin-bottom: 40px;
  }
  .row {
  margin-top: 30px;
  margin-bottom: 30px;
  }
  .bank {
    width: 25px;
    opacity: 0.6;
    margin-right: 5px;
  }
}

.animation-top {
  -webkit-transition: 6s ease-in-out;
  -moz-transition: 6s ease-in-out;
  -o-transition: 6s ease-in-out;
  transition: 6s ease-in-out;
}

html:hover .animation-top {
  -webkit-transform: translate(0px,-500px);
  -moz-transform: translate(0px,-500px);
  -o-transform: translate(0px,-500px);
  -ms-transform: translate(0px,-500px);
  transform: translate(0px,-500px);
}

.btn-group .btn {
  white-space: normal;
  width: 80px;
  padding: 7px;

}

.score-preview {
  background: $brand-dark-blue;
  border-top-right-radius: 12px;
  border-bottom-right-radius: 12px;
  .text-container {
    padding-top: 10px;
  }
  small {
    color: $brand-dark-blue;
    font-weight: bold;
    line-height: 3em;
  }
  .number-lg {
    line-height: 0.4em;
  }
}

.globe {
  background-image: url("globe.png");
  background-size: 50%;
  background-repeat: no-repeat;
  background-position: left 50% top 0%;
  min-height: 160px;
}

span.spinner input[type=number] {
  float: left;
  width: 70px;
  height: 45px;
  padding: 0;
  font-size: 1.2em;
  text-transform: uppercase;
  text-align: center;
  color: $brand-dark-blue;
  border: 2px $brand-dark-blue solid;
  background: none;
  outline: none;

}

span.spinner {
  display: inline-flex;
  height: 45px;
  user-select: none;
  -ms-user-select: none;
  -moz-user-select: none;
  -webkit-user-select: none;
  -webkit-touch-callout: none;
}

span.spinner > .input-group-text {
  float: left;
  display: block;
  border: 2px $brand-dark-blue solid;
  border-right: 0;
  width: 20px;
  background: $brand-grey;
}

span.spinner > .sub,
span.spinner > .add {
  float: left;
  display: block;
  width: 45px;
  height: 45px;
  text-align: center;
  font-family: Lato;
  font-weight: 700;
  font-size: 1.2em;
  line-height: 40px;
  color: $brand-dark-blue;
  border: 2px $brand-dark-blue solid;
  border-right: 0;
  border-radius: 6px 0 0 6px;
  cursor: pointer;
  transition: 0.1s linear;
  -o-transition: 0.1s linear;
  -ms-transition: 0.1s linear;
  -moz-transition: 0.1s linear;
  -webkit-transition: 0.1s linear;
}

span.spinner > .add {
  top: 0;
  border: 2px $brand-dark-blue solid;
  border-left: 0;
  border-radius: 0 6px 6px 0;
}

span.spinner > .sub:hover,
span.spinner > .add:hover {
  background: $brand-primary;
  color: white;
}
 input[type=number]::-webkit-inner-spin-button, input[type=number]::-webkit-outer-spin-button {
 -webkit-appearance: none;
}

.numbered-list {
  list-style: none;
}

.numbered-list li {
  counter-increment: my-awesome-counter;
  font-size: 1.3em;
  font-family: Maven Pro;
  line-height: 2.2em;
}

.numbered-list li::before {
  content: counter(my-awesome-counter);
  position: absolute;
  left: 15px;
  color: $brand-grey;
  font-family: Baloo;
  font-size: 2em;
  transform: rotate(-10deg);
}
