.indice-section1 {
  background-image: url(<%= asset_path('Carbo-BG-2-1.svg') %>), url(<%= asset_path('Carbo-BG-2-2.svg') %>);
  background-position: left -8% bottom 4%, right -5% top 25%;
  background-size: 20%, 15%;
  background-repeat: no-repeat, no-repeat;
}

.camembert {
  background-image: url(<%= asset_path('Carbo-BG-5.svg') %>);
  background-position: left -45% bottom 10%;
  background-size: 40%;
  background-repeat: no-repeat;
  .category-pill {
    border-radius: 20px;
    width: 20px;
    height: 20px;
  }
}

.background-linear {
  background: linear-gradient(60deg, #20B2AA 0%, #0D546A 100%);
  .content {
    padding: 50px;
    color: black;
    .row {
      margin-top: 25px;
    }
    hr {
      margin-top: 40px;
      margin-bottom: 40px;
    }
    h3 {
      margin-bottom: 40px;
    }
  }
  .btn {
    margin-top: 40px;
  }
}

#evolution {
  background-image: url(<%= asset_path('Carbo-BG-4.svg') %>);
  background-position: left 50% bottom 5%;
  background-size: 90%;
  background-repeat: no-repeat;
  h2 {
    margin-top: 70px;
    margin-bottom: 20px;
  }
}

#articles {
  background-image: url(<%= asset_path('Carbo-BG-3-1.svg') %>), url(<%= asset_path('Carbo-BG-3-2.svg') %>);
  background-position: left 10% top 10%, right -10% top 45%;
  background-size: 10%, 20%;
  background-repeat: no-repeat, no-repeat;
  h2 {
    margin-top: 70px;
  }
  padding-bottom: 70px;
}
