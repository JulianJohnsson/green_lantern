@import "material/scss/material-kit/variables";

.mission-section {
  p {
  font-weight: normal;
  font-size: 1.2em;
  line-height: 1.5em;
  }
}

@media screen and (max-width: 768px) {
  .mission-section {
    height: auto;
    padding: 20px 0;
  }
}

.mission-section h1, h2 {
  font-weight: bold;
  margin-bottom: 50px;
  mark {
  color: inherit;
  }
}

.mission2 {
  background: white;
  mark {
    background-color: #ffe8b6;
  }
}

.mission3 {
  background: linear-gradient(180deg, #FFFFFF 0%, #E5E5E5 100%);
  mark {
    background-color: #a9e0dd;
    transform: matrix(1, 0, 0.01, 1, 0, 0);
  }
}

.mission4 {
  mark {
    background-color: #fec0cd;
    transform: matrix(1, 0, 0.01, 1, 0, 0);
  }
}

.mission5 {
  background: linear-gradient(180deg, #E5E5E5 0%, #FFFFFF 68.4%);
  .container {
    background-image: url(<%= asset_path('mission_section5.png') %>);
    background-position: right 50% bottom 50%;
    background-size: 40%;
    background-repeat: no-repeat;
  }
  h4 {
    color: $brand-primary;
    font-weight: normal;
  }
  .description {
    font-weight: normal;
    font-size: 0.9em;
    text-align: justify;
  }
}

.mission6 {
  background: linear-gradient(180deg, #FFFFFF 0%, #E5E5E5 100%);
  h4 {
    font-weight: normal;
    small {
      font-weight: bold;
    }
  }
}

.projects2 {
  background-image: url(<%= asset_path('background_projects2.png') %>);
  background-position: left -20% bottom 55%;
  background-size: 55%;
  background-repeat: no-repeat;
}

@media screen and (max-width: 768px) {
  .projects2 {
    background-size: 100%;
    p {
      color: white;
    }
 }
}

.mission-section {
  .emoji {
    line-height: 2.5em;
  }
}
