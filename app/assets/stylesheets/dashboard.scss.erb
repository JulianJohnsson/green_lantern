@import "material/scss/material-kit/variables";

.dashboard-wrapper {
  min-height: 90vh;
  background-image: url(<%= asset_path('dashboard_background.png') %>);
  background-size: 20%;
  background-repeat: no-repeat;
  background-position: left 50% top 50%;

  h2 {
    border: 0;
  }

  .card {
    margin-top: 20px;
    transition: transform .5s;
  }

  .card:hover {
    transform: scale(1.05);
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.25);
  }

  .card-header {
    border-bottom-left-radius: 100px !important;
    border-bottom-right-radius: 100px !important;
    h4 {
      font-size: 1em;
    }
    .big {
      font-size: 1.3em;
      font-weight: bold;
      width: 80%;
    }
  }

  .card-body {
    padding-top: 30px;
  }
}

.img-container {
  position: relative;
  a {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}

.carousel-item .big {
  font-size: 18px;

}

.card .card-header .subtitle {
  margin-bottom: -20px;
  span {
    border-radius: 50px;
    padding: 3px 10px 3px 10px;
  }
}
.card .card-header-info .subtitle span {
  background-color: darken($brand-info, 10%);
}
.card .card-header-primary .subtitle span {
  background-color: darken($brand-primary, 10%);
}
.card .card-header-rose .subtitle span {
  background-color: darken($brand-rose, 10%);
}
.card .card-header-warning .subtitle span {
  background-color: darken($brand-warning, 10%);
}
.card .card-header-danger .subtitle span {
  background-color: darken($brand-danger, 10%);
}
.card .card-header-violet .subtitle span {
  background-color: darken($brand-violet, 10%);
}

.card .card-header img {
  max-height: 96px;
}

.card-img {
  max-height: 280px;
  width: auto;
  border-radius: 12px;
  opacity: 0.3;
}
