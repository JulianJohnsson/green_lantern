.thermometre-parent {
  position: relative;
  top: 0;
  left: 0%;
  width: 70%;
  transform: translate(50%, 0);
  .progress-line, .progress-bar {
    border-radius: 20px;
  }
  p {
    line-height: 1em;
    margin-bottom: 0;
  }
}

.thermometre {
  height: 380px;
  position: relative;
  top: 0;
  left: 0;
}

.thermometre-graduation {
  height: 340px;
  position: absolute;
  top: 0;
  left: 50px;
}

.progress-container {
  position: absolute;
  width: 350px;
  height: 20px;
  top: 175px;
  left: -145px;
}

.vertical {
  display: inline-block;
  -webkit-transform: rotate(-90deg); /* Chrome, Safari, Opera */
  transform: rotate(-90deg);
}

.thermometre-parent .badge-left {
  position: absolute;
  width: 200px;
  bottom: 0;
  left: -180px;
  transition-property: bottom;
  transition-duration: 2s;
  transition-timing-function: ease-in-out;
  transition-delay: 2s;
}

.thermometre-parent .badge-right {
  position: absolute;
  width: 200px;
  bottom: 0;
  left: 70px;
}

.badge-left .col-7 {
    margin-right: -15px;
}
.badge-right .col-7 {
    margin-left: -15px;
}

.thermometre-parent .legend {
  position: absolute;
  bottom: 15px;
  left: 50px;
}

@media screen and (max-width: 768px) {

}

.page-header .thermometre-parent {
  p {
    font-size: 1em;
  }
  .legend {
    bottom: 5px;
    left: 75px;
    font-weight: bold;
  }
  .thermometre-graduation {
    opacity: 0.5;
  }
  .progress .progress-bar {
    animation-name: animateBar;
    animation-iteration-count: 1;
    animation-timing-function: ease-in;
    animation-duration: 2s;
  }
  @keyframes animateBar {
      0% {transform: translateX(-100%);}
      100% {transform: translateX(0);}
  }
  #carbo {
    animation-name: animateBadge;
    animation-iteration-count: 1;
    animation-timing-function: ease-in;
    animation-duration: 2s;
  }
  @keyframes animateBadge {
    0% {transform: translateY(-100%);}
    100% {transform: translateY(0);}
  }
  .badge-right {
    width: 80%;
  }
}
