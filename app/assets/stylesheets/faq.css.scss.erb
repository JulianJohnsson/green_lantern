@import "material/scss/material-kit/variables";

.faq {
  background-size: 50%;
  background-repeat: no-repeat;
  background-image: url(<%= asset_path("home_section1.png") %>);
  background-position: right 0% top 0%;
  .card-body {
    padding-bottom: 30px;
  }
}

.faq button {
  text-align: left;
  width: 100%;
  color: $brand-dark-blue;
  background-color: inherit;
  font-size: 1.2em;
  padding: 20px 0;
  font-weight: bold;
  border-top: none;
  border-left: none;
  border-right: none;
  border-bottom: none;
  cursor: pointer;
}

.faq .collapse {
  margin-top: 20px;
  margin-bottom: 20px;
}
