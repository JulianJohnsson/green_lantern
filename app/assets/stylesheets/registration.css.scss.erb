@import "material/scss/material-kit/variables";

#registration-navbar .navbar-toggler {
  border: none;
}

.navbar .navbar-nav .nav-item .nav-link {
  font-size: 14px;
}

@media screen and (max-width: 768px) {
  .navbar .btn {
  margin-left: 20px !important;
  margin-top: 10px !important;
  }
}

@media screen and (max-width: 768px) {
  .registration-page {
    height: auto;
  }
}

.social-line p {
  margin-top: -5px;
}
.social-line a {
  color: white !important;
  margin-top: 0rem;
  border: 1px solid white;
  border-radius: 12px;
  :hover {
    background-color: $brand-primary;
    border: 1px solid $brand-primary;
  }
}

.registration-page {
  background-image: url(<%= asset_path('home_section1.png') %>);
  background-position: right 0% top 0%;
  padding-top: 0px;
  height: calc(100vh - 80px);
}

.onboarding-navigation .navbar-brand {
  font-family: Maven Pro;
  font-weight: 900;
  padding-top: 0px;
}

.onboarding-navigation .nav-link {
  font-family: Quicksand;
  font-weight:700 !important;
  color: $brand-grey;
}

.pill-success {
  background: $brand-success;
}

.pill-danger {
  background: $brand-danger;
}

#error_explanation {
  color: $brand-danger;
  h2 {
    font-size: 1em;
  }
  ul {
    margin-top: -40px;
  }
}
