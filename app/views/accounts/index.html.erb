<% content_for :title, "Mes comptes" %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= image_tag("accounts_illustration.png", class: "img-fluid", style: "margin-bottom: -30px;") %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body table-responsive">
          <div class="container">
            <div class="row">
              <div class="col-md-6 text-left">
                <h3>Comptes bancaires</h3>
              </div>
              <div class="col-md-6 text-right mt-auto mb-auto">
                <%= link_to @redirect_url do %>
                  Ajouter un compte bancaire
                  <i class="material-icons">add_circle</i>
                <% end %>
              </div>
            </div>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>Nom du compte</th>
                <th>Etat</th>
                <th>Personnes concernÃ©es</th>
                <th/>
              </tr>
            </thead>
            <tbody>
              <% @accounts.each do |account| %>
                <% if account.kind != 'savings' %>
                  <tr>
                    <td>
                      <%= account.name %>
                      <br />
                      <small>
                        <% if account.last_sync_at != nil %>
                          <%= account.last_sync_at.strftime("Mis Ã  jour le %d/%m/%Y") %>
                        <% else %>
                          En attente de synchronisation
                        <% end %>
                      </small>
                    </td>
                    <td>
                      <% if account.status == 0 %>
                        <div class="category-pill pill-success" data-toggle="tooltip" data-placement="bottom" title="" data-container="body" data-original-title="Ton compte est bien synchronisÃ©, RAS !"/>
                      <% else %>
                        <div class="category-pill pill-danger" data-toggle="tooltip" data-placement="bottom" title="" data-container="body" data-original-title="Ton compte n'est plus synchronisÃ©, rÃ©essaie demain et si cela persiste merci de nous contacter"/>
                      <% end %>
                    </td>
                    <td class="text-center edit_account">
                      <%= form_for(account, remote: true, :url => "accounts/#{account.id}") do |t| %>
                        <label data-toggle="tooltip" data-placement="bottom" data-container="body" data-original-title="Combien de personnes sont concernÃ©es par les dÃ©penses sur ce compte ?">ðŸ‘¥</label>
                        <%= t.number_field :people, :value => (account.people||1), :min => 1, :max => 1000, class: "" %>
                        <%= button_tag :class => "btn btn-fab btn-sm btn-outline-primary" do %>
                          <i class="material-icons">check</i>
                        <% end %>
                      <% end %>
                    </td>
                    <td class="text-right">
                      <%= link_to 'Re-synchroniser', @bridge.edit_item_url(current_user, account.item_id), class: "btn btn-link btn-info" %>
                      <%= link_to "Supprimer", "/accounts/#{account.id}" , :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger btn-link' %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'Ajouter un nouveau compte', @redirect_url, :class => 'btn btn-lg btn-primary btn-round' %>
</div>
<%= render '/scores/number_spinner' %>
