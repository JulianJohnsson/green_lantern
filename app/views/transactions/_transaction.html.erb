<td>
  <%= transaction.description %>
</td>
<td>
  <%= Category.find(transaction.category_id).name %>
<td>
  <%= number_with_precision(transaction.carbone, precision: 2).to_s + " Kg" %>
</td>
<td>
  <%= transaction.date %>
</td>
<td>
  <%= link_to edit_transaction_path(transaction, :month => params[:month], :category => ('1' if current_page?('/categorize') || params[:category])) do %>
    <i class="material-icons">more_vert</i>
  <% end %>
</td>


