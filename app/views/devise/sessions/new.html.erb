<% content_for :title do %>Se connecter à mon compte personnel Carbo<% end %>
<% content_for :description do %>Content de te revoir ici ! Accède à ta webapp Carbo pour suivre, réduire et compenser ton impact carbone quotidien !<% end %>
<div class="row">
  <div class="col-lg-4 col-md-3 d-none d-md-block mt-auto mb-auto text-center">
    <h4>Content de te revoir ici !<br /><span style="font-size:2em; line-height:1.8em">☺</span></h4>
    <div class="signup">
      <%= image_tag "sign_in.png", class: "img-fluid", style: "width: 60%;"%>
    </div>
  </div>
  <div class="col-lg-4 col-md-6">
    <div class="card">
      <div class="card-header card-header-dark text-center">
        <h3 class="card-title">Me connecter</h3>

        <div class="social-line">
          <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-just-icon btn-link' do %>
            <i class="fa fa-facebook-square"></i>
          <% end %>
          <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-just-icon btn-link' do %>
            <i class="fa fa-google-plus"></i>
          <% end %>
        </div>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <div class="authform">
          <div class="card-body">
            <p class="description text-center">ou plus classique</p>
            <%= devise_error_messages! %>
            <div class="form-group bmd-form-group">
              <%= f.label :email, class: 'bmd-label-floating' %>
              <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
            </div>
            <div class="form-group bmd-form-group">
              <%= f.label :mot_de_passe, class: 'bmd-label-floating' %>
              <%= f.password_field :password, class: 'form-control' %>
              <%- if devise_mapping.recoverable? %>
                <small class="form-text text-muted">
                  Mot de passe oublié ?
                  <strong><%= link_to "Réinitialiser", new_password_path(resource_name), class: 'right' %></strong>
                </small>
              <% end -%>
            </div>
            <% if devise_mapping.rememberable? %>
              <%= f.hidden_field :remember_me, :value => true %>
            <% end -%>
          </div>
          <div class="card-footer text-center">
            <%= f.submit "Je me connecte", :class => 'btn btn-primary btn-lg btn-round mr-auto ml-auto'%>
          </div>
        </div>
      <% end %>
    </div>
    <div>
      <p class="text-center">
        pas encore inscrit ?
        <strong><%= link_to 'Créer mon compte', new_user_registration_path %></strong>
      </p>
    </div>
  </div>
</div>
