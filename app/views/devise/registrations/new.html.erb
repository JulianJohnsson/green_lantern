<% content_for :title do %>Tu veux maîtriser ton impact carbone ? Découvre Carbo !<% end %>
<% content_for :description do %>Créé un compte Carbo gratuitement et rejoins des milliers d'éco-optimistes qui agissent chaque jour pour le climat<% end %>
<div class="row">
  <div class="col-lg-4 col-md-3 d-none d-md-block mt-auto mb-auto text-center">
    <% if current_page?('/connexion-la-banque-postale') %>
      <% cookies[:context] = "LBP" %>
      <%# session[:context] = "LBP" %>
      <div style="margin-bottom: 30px;">
        <%= image_tag "Logo_Carbo_white_bg_dark.svg", class: "img-fluid", style: "margin-right:20px;width:80px;" %>
        x
        <%= image_tag "Logo_LBP.svg", class: "img-fluid", style: "margin-left:20px;width:80px;" %>
      </div>
      <h4>Avec Carbo et La Banque Postale, <br /><span class="text-primary" style="font-weight:bold;">estimez gratuitement</span> l'impact de vos dépenses quotidiennes !</h4>
      <div class="signup" style="padding-top:30px;">
        <%= image_tag "LBP-SignUp-Illustration.svg", class: "img-fluid" %>
      </div>
    <% else %>
      <h4>Tu veux maitriser ton impact carbone ?<br /><span class="text-primary" style="font-weight:bold;">Découvre Carbo</span> maintenant !</h4>
      <div class="signup" style="padding-top:30px;">
        <%= image_tag "sign_up.png", class: "img-fluid" %>
      </div>
    <% end %>
  </div>
  <div class="col-lg-4 col-md-6 offset-1">
    <div class="card" style="z-index:100000;">
      <div class="card-header card-header-dark text-center">
        <h3 class="card-title">Créer mon compte</h3>
        <div class="social-line">
          <p class="text-white text-center small">en 1 clic avec</p>
          <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-just-icon btn-link' do %>
            <i class="fa fa-facebook-f"></i>
          <% end %>
          <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-just-icon btn-link' do %>
            <i class="fa fa-google"></i>
          <% end %>
        </div>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <div class="authform">
          <div class="card-body">
            <p class="description text-center">ou plus classique</p>
            <%= devise_error_messages! %>
            <div class="form-group bmd-form-group">
              <%= f.label :prénom, class: 'bmd-label-floating' %>
              <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
            </div>
            <div class="form-group bmd-form-group">
              <%= f.label :email, "Email", class: 'bmd-label-floating' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="form-group bmd-form-group">
              <%= f.label :mot_de_passe, class: 'bmd-label-floating' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>
          <div class="card-footer text-center">
            <% if cookies[:_ga].present? %>
              <% cookies[:_ga].slice!(0,6) %>
              <%= f.hidden_field :gaid, :value => cookies[:_ga] %>
            <% end %>
            <% if current_page?('/connexion-la-banque-postale') %>
              <%= f.hidden_field :context, :value => 'lbp' %>
            <% end %>
            <%= f.submit "Je crée mon compte", :class => 'btn btn-primary btn-lg btn-round mr-auto ml-auto'%>
          </div>
        </div>
      <% end %>
    </div>
    <div>
      <p class="text-center">
        déjà utilisateur Carbo ?
        <strong><%= link_to 'Me connecter', new_user_session_path %></strong>
      </p>
    </div>
  </div>
</div>
