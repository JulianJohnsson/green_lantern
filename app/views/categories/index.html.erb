<% content_for :title, "Catégories" %>

  <div class="row">
    <div class="col-md-12 text-center">
      <div class="card">
        <div class="card-title month-nav">
          <div class="row">
            <div class="col-3 text-right mt-auto mb-auto">
              <%= link_to :month => (params[:month].to_i || 0) + 1 do %>
                <i class="material-icons">arrow_back</i>
              <% end %>
            </div>
            <div class="col-6 text-center mt-auto mb-auto">
              <h3>
                <%= l(params[:month].to_i.months.ago, format: '%B %y') %>
              </h3>
            </div>
            <div class="col-3 text-left mt-auto mb-auto">
              <% if params[:month].to_i > 0 %>
                <%= link_to(:month => (params[:month].to_i) - 1)  do %>
                  <i class="material-icons">arrow_forward</i>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body table-responsive">
          <div class="row">
            <div class="piechart-title text-center">
              <div>
                <span class="number number-md"><%= number_with_precision(@carbone_total, precision: 0) %></span>
                <br>kgCO2
              </div>
            </div>
            <div class="col-md-4 mt-auto mb-auto d-none d-md-block">
              <%= image_tag("category_left.png", class: "img-fluid illustration") %>
            </div>
            <div class="col-md-4 mt-auto mb-auto">
              <%= pie_chart @carbone_by_parent_category.map { |c,v| [c.name,number_with_precision(v, precision: 2)] }, donut: true, legend: "none", suffix: " kg" %>
            </div>
            <div class="col-md-4 mt-auto mb-auto d-none d-md-block">
              <%= image_tag("category_right.png", class: "img-fluid illustration") %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <table class="table text-left table-category">
                <thead>
                  <tr>
                      <th />
                      <th>Type</th>
                      <th class="d-none d-md-table-cell">kgCO2</th>
                      <th>Part</th>
                      <!-- <th>Précision</th> -->
                      <th />
                  </tr>
                </thead>
                <tbody>
                  <% @carbone_by_parent_category.each do |c,v| %>
                    <tr class="<%= "inactive" if v == 0 %>">
                      <td class="text-right" style="width:10%;">
                        <div class="category-pill ml-auto" style="background:<%= c.color unless v== 0 %><%= "grey" if v== 0 %>;"/>
                      </td>
                      <td>
                        <%= c.name %>
                        <small>
                          <br />
                          <% unless v == 0 %>
                            <%= link_to "/transactions?month=#{params[:month]}&parent_category=#{c.id}" do %>
                              <%= @transactions.parent_category_id(c.id).count.to_s + " transactions" %>
                            <% end %>
                          <% else %>
                           pas de transaction
                          <% end %>
                        </small>
                      </td>
                      <td class="d-none d-md-table-cell">
                        <%= number_with_precision(v, precision: 2).to_s %>
                      </td>
                      <td>
                        <%= number_with_precision(v*100 / @carbone_total, precision: 1).to_s + " %" %>
                      </td>
                      <!-- <td>
                        <span class="badge badge-pill badge-danger">Basse</span>
                      </td> -->
                      <td class="text-left" style="width:10%;">
                        <% unless v == 0 %>
                          <%= link_to "/categories/#{c.id}?month=#{params[:month]}", :month => (params[:month].to_i || 0)  do %>
                            <i class="material-icons">more_vert</i>
                          <% end %>
                        <% else %>
                          <i class="material-icons">more_vert</i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center bottom-cta">
    <div class="col-md-3 text-center">
      <%= image_tag("reduire_CTA.png", class: "img-fluid") %>
      <%= link_to "Réduire mon impact", "/compare", class: "btn btn-lg btn-rose btn-round" %>
    </div>
  </div>
