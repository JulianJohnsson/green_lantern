<h3>User</h3>
<p>Email: <%= @user.email if @user.email %></p>
<%= link_to 'Modifier', edit_user_registration_path %>

<h3>Connexions bancaires</h3>
<table class="table table-responsive">
  <tbody>
    <% @list.each do |account| %>
      <% if account['type'] != 'savings' %>
        <tr>
          <td>
            <%= account['name'] %>
            <br />
            <small>
              <%= account['updated_at'].to_datetime.strftime("Mis Ã  jour le %d/%m/%Y") %>
            </small>
          </td>
          <td><%= account['status'] %></td>
          <td><%= link_to 'Modifier mes identifiants' %></td>
          <td><%= link_to 'Supprimer le compte' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to 'Ajouter un compte', @redirect_url, :class => 'btn btn-primary btn-round' %>
<h3>Cancel Account</h3>
<p>Unhappy? We'll be sad to see you go.</p>
<%= button_to "Cancel my account", user_registration_path, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button right' %>
