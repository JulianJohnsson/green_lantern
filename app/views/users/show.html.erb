<% content_for :title, "Mes comptes" %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= image_tag("accounts_illustration.png", class: "img-fluid", style: "margin-bottom: -30px;") %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body table-responsive">
          <div class="container">
            <div class="row">
              <div class="col-6 text-left">
                <h3>Comptes bancaires connectés</h3>
              </div>
              <div class="col-6 text-right mt-auto mb-auto">
                <%= link_to @redirect_url do %>
                  Ajouter un compte bancaire
                  <i class="material-icons">add_circle</i>
                <% end %>
              </div>
            </div>
          </div>
          <table class="table">
            <tbody>
              <% @list.each do |account| %>
                <% if account['type'] != 'savings' %>
                  <tr>
                    <td>
                      <%= account['name'] %>
                      <br />
                      <small>
                        <%= account['updated_at'].to_datetime.strftime("Mis à jour le %d/%m/%Y") %>
                      </small>
                    </td>
                    <td><%= account['status'] %></td>
                    <td class="text-right">
                      <%= link_to 'Modifier mes identifiants', @bridge.edit_item_url(current_user, account['item']['id']), class: "btn btn-link btn-info" %>
                      <%= link_to 'Supprimer le compte', "", class: "btn btn-link btn-danger" %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'Ajouter un nouveau compte', @redirect_url, :class => 'btn btn-lg btn-primary btn-round' %>
</div>
