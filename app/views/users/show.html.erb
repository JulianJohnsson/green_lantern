<% content_for :title, "Mes comptes" %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <%= image_tag("accounts_illustration.png", class: "img-fluid", style: "margin-bottom: -30px;") %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body table-responsive">
          <div class="container">
            <div class="row">
              <div class="col-md-6 text-left">
                <h3>Comptes bancaires</h3>
              </div>
              <div class="col-md-6 text-right mt-auto mb-auto">
                <%= link_to @redirect_url do %>
                  Ajouter un compte bancaire
                  <i class="material-icons">add_circle</i>
                <% end %>
              </div>
            </div>
          </div>
          <table class="table">
            <tbody>
              <% @list.each do |account| %>
                <% if account['type'] != 'savings' %>
                  <tr>
                    <td>
                      <%= account['name'] %>
                      <br />
                      <small>
                        <%= account['updated_at'].to_datetime.strftime("Mis à jour le %d/%m/%Y") %>
                      </small>
                    </td>
                    <td>
                      <% if account['status'] == 0 %>
                        <div class="category-pill pill-success" data-toggle="tooltip" data-placement="bottom" title="" data-container="body" data-original-title="Ton compte est bien synchronisé, RAS !"/>
                      <% else %>
                        <div class="category-pill pill-danger" data-toggle="tooltip" data-placement="bottom" title="" data-container="body" data-original-title="Ton compte n'est plus synchronisé, réessaie demain et si cela persiste merci de nous contacter"/>
                      <% end %>
                    </td>
                    <td class="text-right">
                      <%= link_to 'Modifier mes identifiants', @bridge.edit_item_url(current_user, account['item']['id']), class: "btn btn-link btn-info" %>
                      <%= link_to 'Supprimer le compte', "mailto:contact.carbo2019@gmail.com?subject=Supprimer%20mon%20compte%20bancaire&body=Hey%20Carbo,%20ici%20#{current_user.name}%20!
                        %0d%0dPourriez%20vous%20svp%20supprimer%20mon%20compte%20bancaire%20libellé%20:%20_______________%0d%0dMerci%20!", class: "btn btn-link btn-danger" %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'Ajouter un nouveau compte', @redirect_url, :class => 'btn btn-lg btn-primary btn-round' %>
</div>
