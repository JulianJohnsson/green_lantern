<div class="row align-items-center">
  <div class="col-md-9">
    <div class="card">
      <div class="card-body">
        <%= form_for @score do |form| %>
          <h3><strong>
            <small>Question 3 / 5</small>
            <br>
            Entre nous, est ce que tu t'envoies en l'air <%= current_user.name %> ?
          </strong></h3>
          <div class="form-group bmd-form-group">
            <h4><strong>
              Combien de vols long courrier effectues-tu par an (plus de 3h) ?
            </strong></h4>
            <%= form.number_field :long_flights, class: "form-control", :placeholder => "Entre un nombre de vols aller-retour" %>
          </div>
          <div class="form-group bmd-form-group">
            <h4><strong>
              Combien de vols moyen courrier effectues-tu par an (moins de 3h) ?
            </strong></h4>
            <%= form.number_field :short_flights, class: "form-control", :placeholder => "Entre un nombre de vols aller-retour" %>
          </div>
          <div class="actions">
            <%= form.submit 'Continuer', class: 'btn btn-primary btn-round' %>
          </div>
        <% end %>
      </div>
    </div>
    <ol class="onboarding-indicator">
      <li class="active"></li>
      <li class=""></li>
      <li class=""></li>
    </ol>
  </div>
  <div class="col-md-3">
    <%= render "score" %>
  </div>
</div>
