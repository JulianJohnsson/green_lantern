<%= form_with(model: bridge, local: true) do |form| %>
  <% if bridge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bridge.errors.count, "error") %> prohibited this bridge from being saved:</h2>

      <ul>
      <% bridge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
