<%= form_with(model: bridge, local: true) do |form| %>
  <div class="field">
    <%= form.hidden_field :user_id, :value => @user.id %>
  </div>

  <div class="actions text-center">
    <%= form.submit "Activer le mode dynamique", :class => 'btn btn-primary btn-round' %>
    <%= link_to "Plus tard", '/later', class: 'btn btn-outline-primary btn-round' unless cookies[:bridge] == "true" %>
  </div>
<% end %>
