        <%= image_tag("illu3_section3.png", class: "img-fluid") %>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <p class="number number-lg">
                  3
                </p>
              </div>
              <div class="col-8">
                <h4>
                  Compense ton impact
